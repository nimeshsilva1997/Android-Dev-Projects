<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadeScrollbars="true"
    android:orientation="vertical"
    android:background="#5b6591">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Today's Special"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="match_parent"
                android:layout_height="153dp"
                app:srcCompat="@drawable/pizza"
                android:background="#5b6591"
                />

            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="match_parent"
                android:layout_height="142dp"
                app:srcCompat="@drawable/steak"
                android:background="#5b6591"/>

            <ImageButton
                android:id="@+id/imageButton6"
                android:layout_width="match_parent"
                android:layout_height="151dp"
                app:srcCompat="@drawable/noodles"
                android:background="#5b6591"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:layout_margin="20dp"
                android:text="Healthy Options"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/imageButton7"
                android:layout_width="match_parent"
                android:layout_height="154dp"
                app:srcCompat="@drawable/salad"
                android:background="#5b6591"/>

            <ImageButton
                android:id="@+id/imageButton8"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                app:srcCompat="@drawable/soup"
                android:background="#5b6591"/>

            <ImageButton
                android:id="@+id/imageButton10"
                android:layout_width="match_parent"
                android:layout_height="138dp"
                app:srcCompat="@drawable/chicken"
                android:background="#5b6591"/>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="21dp"
                android:layout_margin="20dp"
                android:text="Dessert"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/imageButton13"
                android:layout_width="match_parent"
                android:layout_height="148dp"
                app:srcCompat="@drawable/cake"
                android:background="#5b6591"/>

            <ImageButton
                android:id="@+id/imageButton14"
                android:layout_width="match_parent"
                android:layout_height="136dp"
                app:srcCompat="@drawable/watermellon"
                android:background="#5b6591"/>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="246dp"
                app:srcCompat="@drawable/icecream"
                android:background="#5b6591"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>