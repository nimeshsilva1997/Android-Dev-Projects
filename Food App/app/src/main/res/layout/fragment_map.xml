<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">


    <TextView
        android:id="@+id/lab1"
        android:layout_marginStart="60dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Berkey Creamery"
        android:textColor="#333333"
       />
    <ImageView
        android:id="@+id/iv1"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lab1"
        android:layout_width="150dp"
        android:scaleType="centerCrop"
        android:layout_height="100dp"
        android:src="@drawable/pic1"/>
    <TextView
        android:id="@+id/lab_arr"
        android:layout_marginTop="90dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/lab1"
        app:layout_constraintStart_toEndOf="@id/iv1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="---------->"/>

    <TextView
        android:id="@+id/lab2"
        android:layout_marginStart="60dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/lab1"
        app:layout_constraintStart_toEndOf="@id/lab_arr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Psu"
        android:textColor="#333333"
        />
    <ImageView
        android:id="@+id/iv2"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toEndOf="@id/lab_arr"
        app:layout_constraintTop_toBottomOf="@id/lab2"
        android:layout_width="100dp"
        android:scaleType="centerCrop"
        android:layout_height="80dp"
        android:src="@drawable/pic2"/>
    <ImageView
        android:id="@+id/iv3"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/iv2"
        app:layout_constraintEnd_toEndOf="@id/iv2"
        app:layout_constraintTop_toBottomOf="@id/iv2"
        android:layout_width="100dp"
        android:scaleType="centerCrop"
        android:layout_height="80dp"
        android:src="@drawable/arr_down"/>
    <TextView
        android:id="@+id/lab3"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/iv3"
        app:layout_constraintEnd_toEndOf="@id/iv3"
        app:layout_constraintTop_toBottomOf="@id/iv3"
        android:layout_width="wrap_content"
        android:scaleType="centerCrop"
        android:layout_height="wrap_content"
       android:text="Pattee and Paterno Library"/>
    <ImageView
        android:id="@+id/iv4"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@id/lab3"
        app:layout_constraintEnd_toEndOf="@id/lab3"
        app:layout_constraintTop_toBottomOf="@id/lab3"
        android:layout_width="100dp"
        android:scaleType="centerCrop"
        android:layout_height="80dp"
        android:src="@drawable/pic3"/>

    <TextView
        android:id="@+id/arr3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toTopOf="@id/iv4"
        app:layout_constraintBottom_toBottomOf="@id/iv4"
        app:layout_constraintEnd_toStartOf="@id/iv4"
        android:text="@string/arr"/>

    <TextView
        android:id="@+id/lab5"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toStartOf="@id/arr3"
        app:layout_constraintEnd_toEndOf="@id/iv3"
        app:layout_constraintTop_toBottomOf="@id/iv3"
        android:layout_width="wrap_content"
        android:scaleType="centerCrop"
        android:layout_height="wrap_content"
        android:text="Nittany lion Shrine"/>
    <ImageView
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@id/lab5"
        app:layout_constraintEnd_toEndOf="@id/lab5"
        app:layout_constraintTop_toBottomOf="@id/lab5"
        android:layout_width="100dp"
        android:scaleType="centerCrop"
        android:layout_height="80dp"
        android:src="@drawable/pic4"/>
</androidx.constraintlayout.widget.ConstraintLayout>